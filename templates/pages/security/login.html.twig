{% extends 'base.html.twig' %}

{% block title %}
  SymfonyRecipe - Connexion
{% endblock %}

{% block body %}
  <div class="container mt-4">
    <h1 class="mt-4">
      Formulaire de Connexion
    </h1>
    {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %}

    {% if errors %}
      <div class="alert alert-danger mt-4">
        {{ errors.messageKey|trans(errors.messageData, 'security') }}
      </div>
    {% endif %}

    <form action="{{ path('app_security') }}" method="POST">
      <div class="form-group">
        <label for="username" class="form-label mt-4">Adresse Email</label>
        <input type="email"
          class="form-control"
          id="username"
          name="_username"
          placeholder="exemple@symfonyrecipe.com"
          value="{{ last_username }}" />
        <small id="emailHelp" class="form-text text-muted">
          Nous ne partagerons jamais votre e-mail avec quelqu'un d'autre.
        </small>
      </div>
      <div class="form-group">
        <label for="password" class="form-label mt-4">Mot de Passe</label>
        <input type="password"
          class="form-control"
          id="password"
          name="_password"
          placeholder="********" />
      </div>
      <button type="submit" class="btn btn-primary mt-4">Se Connecter</button>
    </form>
  </div>
{% endblock %}
